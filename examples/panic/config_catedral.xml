<?xml version="1.0" ?>
<config> 
	<!-- simulation config -->
	<output resultsFile="./data/panic.h5" logsDir="./logs"/>
	<!-- each step is 0.5 secs -->
	<numSteps value="20" serializeResolution="1"/>	
	<!-- catedral -->
	<panicEvents>
		<event x="332" y="328" initRadius="50" obstacleRadius="20" step="0"/>
		<event x="533" y="159" initRadius="50" obstacleRadius="20" step="20"/>
	</panicEvents>
	<environment width="708" height="708">
		<rasters>
			<obstacles file="/home/xrubio/workspace/pandora/pandora/examples/panic/resources/catedral/buildings.tiff"/>
			<support name="orto5" file="/home/xrubio/workspace/pandora/pandora/examples/panic/resources/catedral/orto5m.tiff"/>
			<support name="mtc5" file="/home/xrubio/workspace/pandora/pandora/examples/panic/resources/catedral/mtc5m.tiff"/>
			<support name="dem" file="/home/xrubio/workspace/pandora/pandora/examples/panic/resources/catedral/dem.tiff"/>
		</rasters>
		<initAgentsDistribution type="raster" file="/home/xrubio/workspace/pandora/pandora/examples/panic/resources/catedral/initCatedral.tiff"/>
	</environment>
	<!-- if risk aversion = -1, random value will be chosen -->
	<agents num="10">
		<!-- weight of agent and wall in the compression level, threshold before deaths and number of bodies that are defined as an obstacle -->
		<compression agentWeight="5" wallWeight="1"/>
		<!-- knowledge is related to how well the agents know the best exits; the value is within 0 (no knowledge, random choice) and 10 (perfect knowledge) -->
		<physicalParameters threshold="25" obstacle="2" contagion="30" knowledge="7"/>
	</agents>
</config>

